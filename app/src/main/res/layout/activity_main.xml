<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F0F0"
    android:orientation="vertical"
    android:padding="24dp">


    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="62dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="217dp"
            android:layout_height="54dp"
            android:fontFamily="@font/barlow_semibold"
            android:text="Controle de Medicamentos"
            android:textColor="#04AFB5"
            android:textSize="23sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="104dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="77dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo_tela2" />
    </LinearLayout>
    <!-- Nome do medicamento -->


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/barlow_semibold"
        android:text="Nome Medicamento"
        android:textColor="#04AFB5"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="104dp" />


    <!-- Nome do Medicamento -->
    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="#BCBCBC"
        android:hint="Insira o nome do medicamento
"
        android:padding="12dp"
        android:textColor="@android:color/black" />

    <!-- Tipo do medicamento -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/barlow_semibold"
        android:text="Tipo do medicamento"
        android:textColor="#04AFB5"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="104dp" />

    <!-- Tipo (Spinner) -->
    <Spinner
        android:id="@+id/spinnerTipo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="#BCBCBC"
        android:entries="@array/tipos_medicamentos" />

    <!-- Tipo do medicamento -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/barlow_semibold"
        android:text="Dosagem"
        android:textColor="#04AFB5"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="104dp" />

    <!-- Dosagem -->
    <EditText
        android:id="@+id/editTextDosagem"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="#BCBCBC"
        android:hint="Insira aqui a quantidade (Ex: 500ml)"
        android:padding="12dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/barlow_semibold"
        android:text="Horário"
        android:textColor="#04AFB5"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="104dp" />
    <!-- Horário -->
    <EditText
        android:id="@+id/editTextHorario"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="#BCBCBC"
        android:hint="Adicione aqui o horário da medicação"
        android:padding="12dp"
        android:textColor="@android:color/black" />

    <!-- Botão Adicionar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAdicionar"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/colorAccent"
            android:text="Adicionar"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:cornerRadius="10dp" />

    </LinearLayout>

</LinearLayout>
